{
    "name": "simple-crawler",
    "version": "1.0.0",
    "description": "A simple single-page web crawler with HTTP fetch and browser rendering fallback",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "demo": "tsx src/demo.ts",
        "mcp": "tsx src/mcp-server.ts"
    },
    "bin": {
        "simple-crawler-mcp": "./dist/mcp-server.js"
    },
    "keywords": [
        "crawler",
        "scraper",
        "markdown",
        "web-scraping"
    ],
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.2",
        "cheerio": "^1.0.0",
        "playwright": "^1.40.0",
        "playwright-extra": "^4.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "turndown": "^7.1.2",
        "turndown-plugin-gfm": "^1.0.2",
        "user-agents": "^1.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/turndown": "^5.0.4",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}